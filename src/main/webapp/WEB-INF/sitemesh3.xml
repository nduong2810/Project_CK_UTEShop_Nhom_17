<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- Exclude static resources and auth pages -->
    <mapping path="/auth/*" exclude="true"/>
    <mapping path="/assets/*" exclude="true"/>
    <mapping path="/css/*" exclude="true"/>
    <mapping path="/js/*" exclude="true"/>
    <mapping path="/img/*" exclude="true"/>
    <mapping path="*.css" exclude="true"/>
    <mapping path="*.js" exclude="true"/>
    <mapping path="*.png" exclude="true"/>
    <mapping path="*.jpg" exclude="true"/>
    <mapping path="*.gif" exclude="true"/>
    
    <!-- Apply decorator to all other pages with explicit path -->
    <mapping path="/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
    <mapping path="/guest/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
    <mapping path="/user/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
    <mapping path="/admin/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
    <mapping path="/shipper/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
    <mapping path="/supplier/*" decorator="/WEB-INF/layouts/main-layout.jsp"/>
</sitemesh>